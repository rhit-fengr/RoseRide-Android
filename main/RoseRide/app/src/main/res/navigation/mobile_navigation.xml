<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_profile">

    <fragment
        android:id="@+id/nav_ride"
        android:name="edu.rosehulman.roseride.ui.rideList.RideListFragment"
        android:label="@string/menu_rides"
        tools:layout="@layout/fragment_ride_list" />

    <fragment
        android:id="@+id/nav_request"
        android:name="edu.rosehulman.roseride.ui.requestList.RequestListFragment"
        android:label="@string/menu_requests"
        tools:layout="@layout/fragment_request_list" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="edu.rosehulman.roseride.ui.user.UserFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/nav_profile_edit"
        android:name="edu.rosehulman.roseride.ui.user.UserEditFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_user_edit" />

    //new
    <fragment
        android:id="@+id/navigation_request_add"
        android:name="edu.rosehulman.roseride.ui.request.RequestAddFragment"
        android:label="Add"
        tools:layout="@layout/fragment_request_add" />

    <fragment
        android:id="@+id/navigation_request_edit"
        android:name="edu.rosehulman.roseride.ui.request.RequestEditFragment"
        android:label="@string/menu_requests"
        tools:layout="@layout/fragment_request_edit" />

    <fragment
        android:id="@+id/navigation_request_detail"
        android:name="edu.rosehulman.roseride.ui.request.RequestDetailFragment"
        android:label="@string/menu_requests"
        tools:layout="@layout/fragment_request_edit" />

    <fragment
        android:id="@+id/navigation_ride_add"
        android:name="edu.rosehulman.roseride.ui.RideAddFragment"
        android:label="@string/menu_rides"
        tools:layout="@layout/fragment_ride_add" />

    <fragment
        android:id="@+id/navigation_ride_edit"
        android:name="edu.rosehulman.roseride.ui.RideEditFragment"
        android:label="@string/menu_rides"
        tools:layout="@layout/fragment_ride_edit" />

    <fragment
        android:id="@+id/navigation_ride_detail"
        android:name="edu.rosehulman.roseride.ui.RideDetailFragment"
        android:label="@string/menu_rides"
        tools:layout="@layout/fragment_ride_detail" />

