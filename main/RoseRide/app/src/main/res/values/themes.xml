<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoseRide" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PaleVioletRed</item>
        <item name="colorPrimaryVariant">@color/Chocolate</item>
        <item name="colorOnPrimary">@color/Ivory</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/OrangeRed</item>
        <item name="colorSecondaryVariant">@color/Gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RoseRide.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/LightCoral</item>
    </style>



    <style name="Theme.RoseRide.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
<!--        <item name="android:textSize">20sp</item>-->
<!--        <item name="android:textColor">@color/MediumSpringGreen</item>-->
<!--        <item name="android:fontFamily">cursive</item>-->
    </style>

    <style name="Theme.RoseRide.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
